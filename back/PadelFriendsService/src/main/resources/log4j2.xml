<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" name="Final_project" packages="">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="%d{${LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd HH:mm:ss.SSS}}
            %highlight{${LOG_LEVEL_PATTERN:-%5p}}{FATAL=red blink, ERROR=red, WARN=yellow bold,
            INFO=green, DEBUG=green bold, TRACE=blue} %style{${sys:PID}}{magenta}
            [%15.15t] %style{%-40.40C{1.}}{cyan} : %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}"/>
        </Console>
        <File name="Logs" fileName="Logs/app.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>
        <Async name="Async">
            <AppenderRef ref="Logs"/>
        </Async>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
        <Logger name="com.ironhack.PadelFriendsService.service.UserService" level="info">
            <AppenderRef ref="Async"/>
        </Logger>
        <Logger name="com.ironhack.PadelFriendsService.service.ReservationService" level="info">
            <AppenderRef ref="Async"/>
        </Logger>
        <Logger name="com.ironhack.PadelFriendsService.service.GroupService" level="info">
            <AppenderRef ref="Async"/>
        </Logger>
        <Logger name="com.ironhack.PadelFriendsService.service.ClubService" level="info">
            <AppenderRef ref="Async"/>
        </Logger>
    </Loggers>
</Configuration>